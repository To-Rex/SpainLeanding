<style>
	.navbar {
		position: fixed;
		top: 0;
		width: 100%;
		background: rgba(255, 255, 255, 0.95);
		backdrop-filter: blur(20px);
		-webkit-backdrop-filter: blur(20px);
		z-index: 1000;
		padding: 1.5rem 0;
		border-bottom: 1px solid rgba(212, 175, 55, 0.1);
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.navbar::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(90deg, 
			rgba(212, 175, 55, 0.03) 0%, 
			rgba(247, 220, 111, 0.03) 50%, 
			rgba(212, 175, 55, 0.03) 100%);
		pointer-events: none;
	}

	.nav-content {
		display: flex;
		align-items: center;
		justify-content: space-between;
		position: relative;
		max-width: 1400px;
		margin: 0 auto;
		padding: 0 3rem;
	}

	/* Minimalist Logo */
	.logo {
		text-decoration: none;
		display: flex;
		flex-direction: column;
		line-height: 1;
		transition: all 0.3s ease;
		position: relative;
	}

	.logo::after {
		content: '';
		position: absolute;
		bottom: -4px;
		left: 0;
		width: 0;
		height: 2px;
		background: linear-gradient(90deg, #D4AF37, #F7DC6F, #D4AF37);
		transition: all 0.4s ease;
		border-radius: 2px;
	}

	.logo:hover::after {
		width: 100%;
	}

	.logo-text {
		font-family: 'Crimson Text', serif;
		font-size: 1.8rem;
		font-weight: 600;
		color: #1A365D;
		letter-spacing: -0.5px;
		transition: all 0.3s ease;
	}

	.logo-subtitle {
		font-size: 0.75rem;
		color: #D4AF37;
		font-weight: 400;
		letter-spacing: 1px;
		text-transform: uppercase;
		opacity: 0.8;
		margin-top: 2px;
		transition: all 0.3s ease;
	}

	.logo:hover .logo-text {
		color: #D4AF37;
	}

	.logo:hover .logo-subtitle {
		opacity: 1;
	}

	/* Minimalist Navigation */
	.nav-center {
		flex: 1;
		display: flex;
		justify-content: center;
		margin: 0 3rem;
	}

	.nav-menu {
		display: flex;
		list-style: none;
		gap: 3rem;
		margin: 0;
		padding: 0;
		align-items: center;
	}

	.nav-item {
		position: relative;
		overflow: hidden;
	}

	.nav-link {
		text-decoration: none;
		color: #2C3E50;
		font-weight: 400;
		font-size: 0.95rem;
		letter-spacing: 0.3px;
		padding: 0.8rem 0;
		position: relative;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		text-transform: capitalize;
	}

	.nav-link::before {
		content: '';
		position: absolute;
		bottom: 0;
		left: 50%;
		width: 0;
		height: 2px;
		background: linear-gradient(90deg, #D4AF37, #F7DC6F);
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		transform: translateX(-50%);
	}

	.nav-link:hover {
		color: #D4AF37;
		transform: translateY(-2px);
	}

	.nav-link:hover::before {
		width: 80%;
	}
	.nav-link.active {
		color: #D4AF37;
		font-weight: 600;
		border-bottom: 2px solid #D4AF37;
	}

	/* Right Side */
	.nav-right {
		display: flex;
		align-items: center;
		gap: 1.5rem;
	}

	/* Minimalist Menu Toggle */
	.menu-toggle {
		display: none;
		flex-direction: column;
		background: none;
		border: none;
		cursor: pointer;
		padding: 0.8rem;
		transition: all 0.3s ease;
	}

	.hamburger-line {
		width: 24px;
		height: 2px;
		background: #2C3E50;
		margin: 3px 0;
		transition: all 0.3s ease;
		border-radius: 2px;
	}

	.menu-toggle:hover .hamburger-line {
		background: #D4AF37;
	}

	.menu-toggle.active .hamburger-line:nth-child(1) {
		transform: rotate(45deg) translate(6px, 6px);
		background: #D4AF37;
	}

	.menu-toggle.active .hamburger-line:nth-child(2) {
		opacity: 0;
	}

	.menu-toggle.active .hamburger-line:nth-child(3) {
		transform: rotate(-45deg) translate(6px, -6px);
		background: #D4AF37;
	}

	/* Responsive Design */
	@media (max-width: 1200px) {
		.nav-content {
			padding: 0 2rem;
		}

		.nav-center {
			margin: 0 2rem;
		}

		.nav-menu {
			gap: 2rem;
		}
	}

	@media (max-width: 1024px) {
		.nav-menu {
			gap: 1.5rem;
		}

		.nav-link {
			font-size: 0.9rem;
		}
	}

	@media (max-width: 900px) {
		.menu-toggle {
			display: flex;
			z-index: 1001;
		}

		.nav-center {
			position: absolute;
			top: 100%;
			left: 0;
			right: 0;
			background: rgba(255, 255, 255, 0.98);
			backdrop-filter: blur(20px);
			border-top: 1px solid rgba(212, 175, 55, 0.1);
			transform: translateY(-100%);
			opacity: 0;
			visibility: hidden;
			transition: all 0.3s ease;
			z-index: 1000;
		}

		.nav-center.active {
			transform: translateY(0);
			opacity: 1;
			visibility: visible;
		}

		.nav-menu {
			flex-direction: column;
			padding: 2rem 0;
			gap: 0;
			margin: 0;
			width: 100%;
		}

		.nav-item {
			width: 100%;
			border-bottom: 1px solid rgba(0, 0, 0, 0.05);
		}

		.nav-item:last-child {
			border-bottom: none;
		}

		.nav-link {
			width: 100%;
			padding: 1.5rem 0;
			font-size: 1.1rem;
			text-align: left;
			border-bottom: none;
		}

		.nav-link::before {
			display: none;
		}

		.nav-link:hover {
			color: #D4AF37;
			transform: none;
			background: rgba(212, 175, 55, 0.05);
		}

		.nav-link.active {
			color: #D4AF37;
			font-weight: 600;
			border-left: 3px solid #D4AF37;
			background: rgba(212, 175, 55, 0.1);
		}
	}

	@media (max-width: 480px) {
		.nav-content {
			padding: 0 1.5rem;
		}

		.logo-text {
			font-size: 1.5rem;
		}

		.logo-subtitle {
			font-size: 0.7rem;
		}

		.nav-menu {
		.nav-link {
			padding: 1.2rem 0;
			font-size: 1rem;
		}
	}

	/* Shimmer animation for mobile menu */
	@keyframes shimmer {
		0%, 100% { transform: translateX(-100%) translateY(-100%) rotate(0deg); }
		50% { transform: translateX(100%) translateY(100%) rotate(180deg); }
	}

	/* Scroll Effect */
	.navbar.scrolled {
		padding: 1rem 0;
		background: rgba(255, 255, 255, 0.98);
		box-shadow: 
			0 8px 32px rgba(0, 0, 0, 0.12),
			0 0 0 1px rgba(212, 175, 55, 0.05);
		backdrop-filter: blur(30px);
	}

	/* Load Animation */

	/* Focus states for accessibility */
	.nav-link:focus {
		outline: 2px solid #D4AF37;
		outline-offset: 4px;
		border-radius: 4px;
	}

	.menu-toggle:focus {
		outline: 2px solid #D4AF37;
		outline-offset: 4px;
		border-radius: 4px;
	}

	/* Beautiful typography */
	.nav-link {
		font-family: 'Inter', sans-serif;
		font-optical-sizing: auto;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}
</style>

<script>
	const menuToggle = document.getElementById('menuToggle');
	const navCenter = document.querySelector('.nav-center');
	const navbar = document.querySelector('.navbar');

	// Menu toggle functionality
	menuToggle?.addEventListener('click', () => {
		navCenter?.classList.toggle('active');
		menuToggle?.classList.toggle('active');
	});

	// Close menu when clicking on a link
	document.querySelectorAll('.nav-center a').forEach(link => {
		link.addEventListener('click', () => {
			navCenter?.classList.remove('active');
			menuToggle?.classList.remove('active');
		});
	});

	// Close menu when clicking outside
	document.addEventListener('click', (e) => {
		if (!menuToggle?.contains(e.target) && !navCenter?.contains(e.target)) {
			navCenter?.classList.remove('active');
			menuToggle?.classList.remove('active');
		}
	});

	// Smooth scroll effect
	let lastScrollY = window.scrollY;
	
	window.addEventListener('scroll', () => {
		if (window.scrollY > 50) {
			navbar?.classList.add('scrolled');
		} else {
			navbar?.classList.remove('scrolled');
		}
		lastScrollY = window.scrollY;
	});

	// Smooth scroll for anchor links
	document.querySelectorAll('a[href^="#"]').forEach(anchor => {
		anchor.addEventListener('click', function (e) {
			e.preventDefault();
			const target = document.querySelector(this.getAttribute('href'));
			if (target) {
				target.scrollIntoView({
					behavior: 'smooth',
					block: 'start'
				});
			}
		});
	});
</script>