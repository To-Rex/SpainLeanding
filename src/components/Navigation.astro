---
import LanguageSwitcher from './LanguageSwitcher.astro';
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../i18n/utils';
import { removeLocaleFromPath } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const currentPath = removeLocaleFromPath(Astro.url.pathname);
---

<nav class="navbar">
	<div class="container">
		<div class="nav-content">
			<a href={getLocalizedPath('/', lang)} class="logo">
				<span class="logo-text">Uzbekistán</span>
				<span class="logo-subtitle">Guía Cultural</span>
			</a>
			
			<div class="nav-right">
				<LanguageSwitcher />
				
				<button class="menu-toggle" id="menuToggle">
					<span></span>
					<span></span>
					<span></span>
				</button>
			</div>
			
			<ul class="nav-menu" id="navMenu">
				<li><a href={getLocalizedPath('/', lang)} class={currentPath === '/' ? 'active' : ''}>{t('nav.home')}</a></li>
				<li><a href={getLocalizedPath('/cultura', lang)} class={currentPath === '/cultura' ? 'active' : ''}>{t('nav.culture')}</a></li>
				<li><a href={getLocalizedPath('/destinos', lang)} class={currentPath === '/destinos' ? 'active' : ''}>{t('nav.destinations')}</a></li>
				<li><a href={getLocalizedPath('/consejos', lang)} class={currentPath === '/consejos' ? 'active' : ''}>{t('nav.tips')}</a></li>
				<li><a href={getLocalizedPath('/itinerarios', lang)} class={currentPath === '/itinerarios' ? 'active' : ''}>{t('nav.itineraries')}</a></li>
				<li><a href={getLocalizedPath('/galeria', lang)} class={currentPath === '/galeria' ? 'active' : ''}>{t('nav.gallery')}</a></li>
				<li><a href={getLocalizedPath('/contacto', lang)} class={currentPath === '/contacto' ? 'active' : ''}>{t('nav.contact')}</a></li>
			</ul>
		</div>
	</div>
</nav>

<style>
	.navbar {
		position: fixed;
		top: 0;
		width: 100%;
		background: rgba(255, 255, 255, 0.95);
		backdrop-filter: blur(10px);
		z-index: 1000;
		padding: 1rem 0;
		border-bottom: 1px solid rgba(212, 175, 55, 0.1);
		box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
	}

	.nav-content {
		display: flex;
		align-items: center;
		justify-content: space-between;
		position: relative;
	}

	.logo {
		text-decoration: none;
		display: flex;
		flex-direction: column;
		line-height: 1;
		flex-shrink: 0;
	}

	.logo-text {
		font-family: 'Crimson Text', serif;
		font-size: 1.5rem;
		font-weight: 600;
		color: #1A365D;
	}

	.logo-subtitle {
		font-size: 0.8rem;
		color: #D4AF37;
		font-weight: 400;
	}

	.nav-right {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.nav-menu {
		display: flex;
		list-style: none;
		gap: 1.5rem;
		margin: 0;
		padding: 0;
		position: absolute;
		left: 50%;
		transform: translateX(-50%);
		background: rgba(255, 255, 255, 0.95);
		backdrop-filter: blur(10px);
		border-radius: 50px;
		padding: 0.5rem 2rem;
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
	}

	.nav-menu a {
		text-decoration: none;
		color: #2C3E50;
		font-weight: 400;
		transition: color 0.3s ease;
		font-size: 0.95rem;
		padding: 0.5rem 1rem;
		border-radius: 25px;
		position: relative;
	}

	.nav-menu a:hover {
		color: #D4AF37;
		background: rgba(212, 175, 55, 0.1);
	}

	.nav-menu a.active {
		color: #D4AF37;
		font-weight: 500;
		background: rgba(212, 175, 55, 0.15);
	}


	.menu-toggle {
		display: none;
		flex-direction: column;
		background: none;
		border: none;
		cursor: pointer;
		padding: 0.5rem;
		border-radius: 8px;
		transition: background 0.3s ease;
	}

	.menu-toggle:hover {
		background: rgba(212, 175, 55, 0.1);
	}

	.menu-toggle span {
		width: 25px;
		height: 3px;
		background: #2C3E50;
		margin: 3px 0;
		transition: 0.3s;
		border-radius: 2px;
	}

	@media (max-width: 1024px) {
		.nav-menu {
			position: static;
			transform: none;
			background: none;
			box-shadow: none;
			padding: 0;
			gap: 1rem;
		}

		.nav-menu a {
			padding: 0.3rem 0.8rem;
			font-size: 0.9rem;
		}
	}

	@media (max-width: 900px) {
		.menu-toggle {
			display: flex;
		}

		.nav-right {
			gap: 0.5rem;
		}

		.nav-menu {
			position: absolute;
			top: 100%;
			left: 0;
			width: 100%;
			flex-direction: column;
			background: rgba(255, 255, 255, 0.98);
			backdrop-filter: blur(15px);
			padding: 2rem;
			gap: 1.5rem;
			transform: translateY(-100vh);
			transition: transform 0.3s ease;
			box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
			border-radius: 0;
		}

		.nav-menu.active {
			transform: translateY(0);
		}

		.nav-menu a {
			font-size: 1.1rem;
			padding: 0.5rem 0;
			border-radius: 8px;
			text-align: center;
		}

		.logo-text {
			font-size: 1.3rem;
		}

		.logo-subtitle {
			font-size: 0.7rem;
		}
	}

	@media (max-width: 480px) {
		.navbar {
			padding: 0.8rem 0;
		}

		.container {
			padding: 0 1rem;
		}

		.nav-menu {
			padding: 1.5rem;
		}

		.logo-text {
			font-size: 1.2rem;
		}

		.logo-subtitle {
			font-size: 0.65rem;
		}
	}
</style>

<script>
	const menuToggle = document.getElementById('menuToggle');
	const navMenu = document.getElementById('navMenu');

	menuToggle?.addEventListener('click', () => {
		navMenu?.classList.toggle('active');
	});

	// Close menu when clicking on a link
	document.querySelectorAll('.nav-menu a').forEach(link => {
		link.addEventListener('click', () => {
			navMenu?.classList.remove('active');
		});
	});
</script>