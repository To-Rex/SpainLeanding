---
import LanguageSwitcher from './LanguageSwitcher.astro';
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../i18n/utils';
import { removeLocaleFromPath } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const currentPath = removeLocaleFromPath(Astro.url.pathname);
---

<nav class="navbar">
	<div class="container">
		<div class="nav-content">
			<a href={getLocalizedPath('/', lang)} class="logo">
				<span class="logo-text">Uzbekist√°n</span>
				<span class="logo-subtitle">Cultural Guide</span>
			</a>
			
			<div class="nav-center">
				<ul class="nav-menu" id="navMenu">
					<li class="nav-item">
						<a href={getLocalizedPath('/', lang)} class={`nav-link ${currentPath === '/' ? 'active' : ''}`}>
							{t('nav.home')}
						</a>
					</li>
					<li class="nav-item">
						<a href={getLocalizedPath('/cultura', lang)} class={`nav-link ${currentPath === '/cultura' ? 'active' : ''}`}>
							{t('nav.culture')}
						</a>
					</li>
					<li class="nav-item">
						<a href={getLocalizedPath('/destinos', lang)} class={`nav-link ${currentPath === '/destinos' ? 'active' : ''}`}>
							{t('nav.destinations')}
						</a>
					</li>
					<li class="nav-item">
						<a href={getLocalizedPath('/consejos', lang)} class={`nav-link ${currentPath === '/consejos' ? 'active' : ''}`}>
							{t('nav.tips')}
						</a>
					</li>
					<li class="nav-item">
						<a href={getLocalizedPath('/itinerarios', lang)} class={`nav-link ${currentPath === '/itinerarios' ? 'active' : ''}`}>
							{t('nav.itineraries')}
						</a>
					</li>
					<li class="nav-item">
						<a href={getLocalizedPath('/galeria', lang)} class={`nav-link ${currentPath === '/galeria' ? 'active' : ''}`}>
							{t('nav.gallery')}
						</a>
					</li>
					<li class="nav-item">
						<a href={getLocalizedPath('/contacto', lang)} class={`nav-link ${currentPath === '/contacto' ? 'active' : ''}`}>
							{t('nav.contact')}
						</a>
					</li>
				</ul>
			</div>
			
			<div class="nav-right">
				<LanguageSwitcher />
				<button class="menu-toggle" id="menuToggle">
					<span class="hamburger-line"></span>
					<span class="hamburger-line"></span>
					<span class="hamburger-line"></span>
				</button>
			</div>
		</div>
	</div>
</nav>

<style>
	.navbar {
		position: fixed;
		top: 0;
		width: 100%;
		background: rgba(255, 255, 255, 0.85);
		backdrop-filter: blur(20px);
		-webkit-backdrop-filter: blur(20px);
		z-index: 1000;
		padding: 1.5rem 0;
		border-bottom: 1px solid rgba(0, 0, 0, 0.05);
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.navbar::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(90deg, 
			rgba(212, 175, 55, 0.02) 0%, 
			rgba(247, 220, 111, 0.02) 50%, 
			rgba(212, 175, 55, 0.02) 100%);
		pointer-events: none;
	}

	.nav-content {
		display: flex;
		align-items: center;
		justify-content: space-between;
		position: relative;
		max-width: 1400px;
		margin: 0 auto;
		padding: 0 3rem;
	}

	/* Minimalist Logo */
	.logo {
		text-decoration: none;
		display: flex;
		flex-direction: column;
		line-height: 1;
		transition: all 0.3s ease;
		position: relative;
	}

	.logo::after {
		content: '';
		position: absolute;
		bottom: -4px;
		left: 0;
		width: 0;
		height: 2px;
		background: linear-gradient(90deg, #D4AF37, #F7DC6F);
		transition: width 0.4s ease;
	}

	.logo:hover::after {
		width: 100%;
	}

	.logo-text {
		font-family: 'Crimson Text', serif;
		font-size: 1.8rem;
		font-weight: 600;
		color: #1A365D;
		letter-spacing: -0.5px;
		transition: all 0.3s ease;
	}

	.logo-subtitle {
		font-size: 0.75rem;
		color: #D4AF37;
		font-weight: 400;
		letter-spacing: 1px;
		text-transform: uppercase;
		opacity: 0.8;
		margin-top: 2px;
	}

	.logo:hover .logo-text {
		color: #D4AF37;
		transform: translateY(-1px);
	}

	/* Minimalist Navigation */
	.nav-center {
		flex: 1;
		display: flex;
		justify-content: center;
		margin: 0 3rem;
	}

	.nav-menu {
		display: flex;
		list-style: none;
		gap: 3rem;
		margin: 0;
		padding: 0;
		align-items: center;
	}

	.nav-item {
		position: relative;
	}

	.nav-link {
		text-decoration: none;
		color: #2C3E50;
		font-weight: 400;
		font-size: 0.95rem;
		letter-spacing: 0.3px;
		padding: 0.8rem 0;
		position: relative;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		text-transform: capitalize;
	}

	.nav-link::before {
		content: '';
		position: absolute;
		bottom: 0;
		left: 50%;
		width: 0;
		height: 2px;
		background: linear-gradient(90deg, #D4AF37, #F7DC6F);
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		transform: translateX(-50%);
	}

	.nav-link:hover {
		color: #D4AF37;
		transform: translateY(-2px);
	}

	.nav-link:hover::before {
		width: 100%;
	}

	.nav-link.active {
		color: #1A365D;
		font-weight: 500;
	}

	.nav-link.active::before {
		width: 100%;
		background: linear-gradient(90deg, #1A365D, #2C5282);
	}

	/* Right Side */
	.nav-right {
		display: flex;
		align-items: center;
		gap: 1.5rem;
	}

	/* Minimalist Menu Toggle */
	.menu-toggle {
		display: none;
		flex-direction: column;
		background: none;
		border: none;
		cursor: pointer;
		padding: 0.5rem;
		transition: all 0.3s ease;
	}

	.hamburger-line {
		width: 24px;
		height: 2px;
		background: #2C3E50;
		margin: 3px 0;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		border-radius: 2px;
	}

	.menu-toggle:hover .hamburger-line {
		background: #D4AF37;
	}

	.menu-toggle.active .hamburger-line:nth-child(1) {
		transform: rotate(45deg) translate(6px, 6px);
		background: #D4AF37;
	}

	.menu-toggle.active .hamburger-line:nth-child(2) {
		opacity: 0;
	}

	.menu-toggle.active .hamburger-line:nth-child(3) {
		transform: rotate(-45deg) translate(6px, -6px);
		background: #D4AF37;
	}

	/* Responsive Design */
	@media (max-width: 1200px) {
		.nav-content {
			padding: 0 2rem;
		}

		.nav-center {
			margin: 0 2rem;
		}

		.nav-menu {
			gap: 2rem;
		}
	}

	@media (max-width: 1024px) {
		.nav-menu {
			gap: 1.5rem;
		}

		.nav-link {
			font-size: 0.9rem;
		}
	}

	@media (max-width: 900px) {
		.menu-toggle {
			display: flex;
		}

		.nav-center {
			display: none;
		}

		.nav-menu {
			position: absolute;
			top: calc(100% + 2rem);
			left: 2rem;
			right: 2rem;
			flex-direction: column;
			background: rgba(255, 255, 255, 0.95);
			backdrop-filter: blur(20px);
			padding: 2.5rem;
			gap: 0;
			border-radius: 20px;
			box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
			border: 1px solid rgba(0, 0, 0, 0.05);
			transform: translateY(-20px);
			opacity: 0;
			visibility: hidden;
			transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		}

		.nav-menu.active {
			transform: translateY(0);
			opacity: 1;
			visibility: visible;
		}

		.nav-item {
			width: 100%;
			border-bottom: 1px solid rgba(0, 0, 0, 0.05);
		}

		.nav-item:last-child {
			border-bottom: none;
		}

		.nav-link {
			width: 100%;
			padding: 1.5rem 0;
			font-size: 1.1rem;
			text-align: center;
			border-bottom: none;
		}

		.nav-link::before {
			display: none;
		}

		.nav-link:hover {
			color: #D4AF37;
			transform: translateX(8px);
		}

		.nav-link.active {
			color: #D4AF37;
			font-weight: 500;
		}
	}

	@media (max-width: 480px) {
		.nav-content {
			padding: 0 1.5rem;
		}

		.logo-text {
			font-size: 1.5rem;
		}

		.logo-subtitle {
			font-size: 0.7rem;
		}

		.nav-menu {
			left: 1rem;
			right: 1rem;
			padding: 2rem;
		}

		.nav-link {
			padding: 1.2rem 0;
			font-size: 1rem;
		}
	}

	/* Scroll Effect */
	.navbar.scrolled {
		padding: 1rem 0;
		background: rgba(255, 255, 255, 0.95);
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
	}

	/* Stunning Animation on Load */
	@keyframes fadeInDown {
		from {
			opacity: 0;
			transform: translateY(-30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	/* Page Transition Animations */
	@keyframes slideOutUp {
		from {
			opacity: 1;
			transform: translateY(0);
		}
		to {
			opacity: 0;
			transform: translateY(-50px);
		}
	}

	@keyframes slideInFromRight {
		from {
			opacity: 0;
			transform: translateX(100px);
		}
		to {
			opacity: 1;
			transform: translateX(0);
		}
	}

	@keyframes fadeInScale {
		from {
			opacity: 0;
			transform: scale(0.8);
		}
		to {
			opacity: 1;
			transform: scale(1);
		}
	}

	@keyframes rippleEffect {
		0% {
			transform: scale(0);
			opacity: 1;
		}
		100% {
			transform: scale(4);
			opacity: 0;
		}
	}

	/* Page transition states */
	.page-transition-out {
		animation: slideOutUp 0.5s cubic-bezier(0.4, 0, 0.2, 1) forwards;
	}

	.page-transition-in {
		animation: slideInFromRight 0.6s cubic-bezier(0.4, 0, 0.2, 1);
	}

	/* Link click ripple effect */
	.nav-link {
		position: relative;
		overflow: hidden;
	}

	.nav-link::after {
		content: '';
		position: absolute;
		top: 50%;
		left: 50%;
		width: 0;
		height: 0;
		background: radial-gradient(circle, rgba(212, 175, 55, 0.3) 0%, transparent 70%);
		border-radius: 50%;
		transform: translate(-50%, -50%);
		transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
		pointer-events: none;
		z-index: -1;
	}

	.nav-link.clicked::after {
		animation: rippleEffect 0.6s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.navbar {
		animation: fadeInDown 0.8s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.nav-item {
		animation: fadeInDown 0.8s cubic-bezier(0.4, 0, 0.2, 1);
		animation-fill-mode: both;
	}

	.nav-item:nth-child(1) { animation-delay: 0.1s; }
	.nav-item:nth-child(2) { animation-delay: 0.2s; }
	.nav-item:nth-child(3) { animation-delay: 0.3s; }
	.nav-item:nth-child(4) { animation-delay: 0.4s; }
	.nav-item:nth-child(5) { animation-delay: 0.5s; }
	.nav-item:nth-child(6) { animation-delay: 0.6s; }
	.nav-item:nth-child(7) { animation-delay: 0.7s; }

	/* Focus states for accessibility */
	.nav-link:focus {
		outline: 2px solid #D4AF37;
		outline-offset: 4px;
		border-radius: 4px;
	}

	.menu-toggle:focus {
		outline: 2px solid #D4AF37;
		outline-offset: 4px;
		border-radius: 4px;
	}

	/* Subtle hover effects */
	.nav-item:hover {
		transform: translateY(-1px);
	}

	/* Beautiful typography */
	.nav-link {
		font-family: 'Inter', sans-serif;
		font-optical-sizing: auto;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}
</style>

<script>
	const menuToggle = document.getElementById('menuToggle');
	const navMenu = document.getElementById('navMenu');
	const navbar = document.querySelector('.navbar');
	let isNavigating = false;

	// SPA Navigation System
	async function navigateToPage(url) {
		if (isNavigating) return;
		isNavigating = true;

		try {
			// Fetch new page content
			const response = await fetch(url);
			const html = await response.text();
			const parser = new DOMParser();
			const newDoc = parser.parseFromString(html, 'text/html');
			
			// Get main content (everything except nav)
			const currentMain = document.querySelector('main') || document.body;
			const newMain = newDoc.querySelector('main') || newDoc.body;
			
			// Animate content out
			currentMain.style.opacity = '0';
			currentMain.style.transform = 'translateX(-30px)';
			
			setTimeout(() => {
				// Replace content
				if (document.querySelector('main')) {
					document.querySelector('main').innerHTML = newMain.innerHTML;
				} else {
					// Replace everything except nav
					const nav = document.querySelector('nav');
					document.body.innerHTML = newDoc.body.innerHTML;
					if (nav && !document.querySelector('nav')) {
						document.body.insertBefore(nav, document.body.firstChild);
					}
				}
				
				// Update page title
				document.title = newDoc.title;
				
				// Update URL without page reload
				history.pushState({}, '', url);
				
				// Animate new content in
				const updatedMain = document.querySelector('main') || document.body;
				updatedMain.style.opacity = '0';
				updatedMain.style.transform = 'translateX(30px)';
				
				setTimeout(() => {
					updatedMain.style.transition = 'all 0.4s cubic-bezier(0.4, 0, 0.2, 1)';
					updatedMain.style.opacity = '1';
					updatedMain.style.transform = 'translateX(0)';
					
					// Update active nav link
					updateActiveNavLink(url);
					
					isNavigating = false;
				}, 50);
			}, 300);
			
		} catch (error) {
			console.error('Navigation error:', error);
			// Fallback to normal navigation
			window.location.href = url;
			isNavigating = false;
		}
	}

	// Update active nav link
	function updateActiveNavLink(url) {
		document.querySelectorAll('.nav-link').forEach(link => {
			link.classList.remove('active');
			if (link.getAttribute('href') === url) {
				link.classList.add('active');
			}
		});
	}

	// Handle nav link clicks
	document.querySelectorAll('.nav-link').forEach(link => {
		link.addEventListener('click', function(e) {
			const href = this.getAttribute('href');
			const currentPath = window.location.pathname;
			
			// Only handle internal links
			if (href && href !== currentPath && !href.startsWith('http') && !href.startsWith('#')) {
				e.preventDefault();
				navigateToPage(href);
			}
		});
	});

	// Handle browser back/forward buttons
	window.addEventListener('popstate', (e) => {
		navigateToPage(window.location.pathname);
	});

	// Menu toggle functionality
	menuToggle?.addEventListener('click', () => {
		navMenu?.classList.toggle('active');
		menuToggle?.classList.toggle('active');
	});

	// Close menu when clicking on a link
	document.querySelectorAll('.nav-menu a').forEach(link => {
		link.addEventListener('click', () => {
			navMenu?.classList.remove('active');
			menuToggle?.classList.remove('active');
		});
	});

	// Close menu when clicking outside
	document.addEventListener('click', (e) => {
		if (!menuToggle?.contains(e.target) && !navMenu?.contains(e.target)) {
			navMenu?.classList.remove('active');
			menuToggle?.classList.remove('active');
		}
	});

	// Smooth scroll effect
	let lastScrollY = window.scrollY;
	
	window.addEventListener('scroll', () => {
		if (window.scrollY > 50) {
			navbar?.classList.add('scrolled');
		} else {
			navbar?.classList.remove('scrolled');
		}
		lastScrollY = window.scrollY;
	});

	// Smooth scroll for anchor links
	document.querySelectorAll('a[href^="#"]').forEach(anchor => {
		anchor.addEventListener('click', function (e) {
			e.preventDefault();
			const target = document.querySelector(this.getAttribute('href'));
			if (target) {
				target.scrollIntoView({
					behavior: 'smooth',
					block: 'start'
				});
			}
		});
	});
</script>