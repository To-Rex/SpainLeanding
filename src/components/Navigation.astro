<style>
	.navbar {
		position: fixed;
		top: 0;
		width: 100%;
		background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(248, 250, 252, 0.95) 100%);
		backdrop-filter: blur(20px);
		-webkit-backdrop-filter: blur(20px);
		z-index: 1000;
		padding: 1rem 0;
		border-bottom: 1px solid rgba(212, 175, 55, 0.2);
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
		transition: all 0.3s ease;
	}

	.navbar::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(90deg, 
			rgba(212, 175, 55, 0.05) 0%, 
			rgba(247, 220, 111, 0.05) 50%, 
			rgba(212, 175, 55, 0.05) 100%);
		pointer-events: none;
	}

	.nav-content {
		display: flex;
		align-items: center;
		justify-content: space-between;
		position: relative;
		max-width: 1400px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	/* Logo Styles */
	.logo {
		text-decoration: none;
		display: flex;
		align-items: center;
		gap: 1rem;
		padding: 0.5rem 1rem;
		border-radius: 16px;
		background: linear-gradient(135deg, rgba(212, 175, 55, 0.1) 0%, rgba(247, 220, 111, 0.1) 100%);
		border: 1px solid rgba(212, 175, 55, 0.2);
		transition: all 0.3s ease;
		backdrop-filter: blur(10px);
	}

	.logo:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 25px rgba(212, 175, 55, 0.3);
		background: linear-gradient(135deg, rgba(212, 175, 55, 0.15) 0%, rgba(247, 220, 111, 0.15) 100%);
	}

	.logo-icon {
		font-size: 2rem;
		filter: drop-shadow(0 2px 4px rgba(212, 175, 55, 0.3));
	}

	.logo-text-container {
		display: flex;
		flex-direction: column;
		line-height: 1;
	}

	.logo-text {
		font-family: 'Crimson Text', serif;
		font-size: 1.5rem;
		font-weight: 600;
		color: #1A365D;
		text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
	}

	.logo-subtitle {
		font-size: 0.8rem;
		color: #D4AF37;
		font-weight: 500;
		opacity: 0.9;
	}

	/* Navigation Center */
	.nav-center {
		flex: 1;
		display: flex;
		justify-content: center;
		margin: 0 2rem;
	}

	.nav-menu {
		display: flex;
		list-style: none;
		gap: 0.5rem;
		margin: 0;
		padding: 0.5rem;
		background: rgba(255, 255, 255, 0.6);
		backdrop-filter: blur(15px);
		border-radius: 20px;
		border: 1px solid rgba(212, 175, 55, 0.15);
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
	}

	.nav-item {
		position: relative;
	}

	.nav-link {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		text-decoration: none;
		color: #2C3E50;
		font-weight: 500;
		font-size: 0.9rem;
		padding: 0.8rem 1.2rem;
		border-radius: 14px;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		position: relative;
		overflow: hidden;
		white-space: nowrap;
	}

	.nav-link::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(90deg, transparent, rgba(212, 175, 55, 0.1), transparent);
		transition: left 0.5s ease;
	}

	.nav-link:hover::before {
		left: 100%;
	}

	.nav-link:hover {
		color: #D4AF37;
		background: linear-gradient(135deg, rgba(212, 175, 55, 0.15) 0%, rgba(247, 220, 111, 0.15) 100%);
		transform: translateY(-2px);
		box-shadow: 0 6px 20px rgba(212, 175, 55, 0.25);
		border: 1px solid rgba(212, 175, 55, 0.3);
	}

	.nav-link.active {
		color: #1A365D;
		background: linear-gradient(135deg, #D4AF37 0%, #F7DC6F 100%);
		box-shadow: 0 6px 25px rgba(212, 175, 55, 0.4);
		transform: translateY(-1px);
		font-weight: 600;
	}

	.nav-link.active .nav-icon {
		transform: scale(1.1);
		filter: drop-shadow(0 2px 4px rgba(26, 54, 93, 0.3));
	}

	.nav-icon {
		font-size: 1.1rem;
		transition: all 0.3s ease;
	}

	.nav-text {
		transition: all 0.3s ease;
	}

	/* Right Side */
	.nav-right {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	/* Menu Toggle */
	.menu-toggle {
		display: none;
		flex-direction: column;
		background: rgba(255, 255, 255, 0.8);
		border: 1px solid rgba(212, 175, 55, 0.2);
		cursor: pointer;
		padding: 0.8rem;
		border-radius: 12px;
		transition: all 0.3s ease;
		backdrop-filter: blur(10px);
	}

	.menu-toggle:hover {
		background: rgba(212, 175, 55, 0.1);
		transform: translateY(-1px);
		box-shadow: 0 4px 15px rgba(212, 175, 55, 0.2);
	}

	.hamburger-line {
		width: 24px;
		height: 3px;
		background: linear-gradient(90deg, #2C3E50 0%, #D4AF37 100%);
		margin: 2px 0;
		transition: all 0.3s ease;
		border-radius: 2px;
	}

	.menu-toggle.active .hamburger-line:nth-child(1) {
		transform: rotate(45deg) translate(6px, 6px);
	}

	.menu-toggle.active .hamburger-line:nth-child(2) {
		opacity: 0;
	}

	.menu-toggle.active .hamburger-line:nth-child(3) {
		transform: rotate(-45deg) translate(6px, -6px);
	}

	/* Responsive Design */
	@media (max-width: 1200px) {
		.nav-content {
			padding: 0 1.5rem;
		}

		.nav-center {
			margin: 0 1rem;
		}

		.nav-link {
			padding: 0.7rem 1rem;
			font-size: 0.85rem;
		}

		.nav-icon {
			font-size: 1rem;
		}
	}

	@media (max-width: 1024px) {
		.nav-menu {
			gap: 0.3rem;
		}

		.nav-link {
			padding: 0.6rem 0.8rem;
		}

		.nav-text {
			display: none;
		}

		.nav-icon {
			font-size: 1.2rem;
		}
	}

	@media (max-width: 900px) {
		.menu-toggle {
			display: flex;
		}

		.nav-center {
			display: none;
		}

		.nav-menu {
			position: absolute;
			top: calc(100% + 1rem);
			left: 1rem;
			right: 1rem;
			flex-direction: column;
			background: rgba(255, 255, 255, 0.98);
			backdrop-filter: blur(20px);
			padding: 2rem;
			gap: 1rem;
			border-radius: 20px;
			box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
			border: 1px solid rgba(212, 175, 55, 0.2);
			transform: translateY(-20px);
			opacity: 0;
			visibility: hidden;
			transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		}

		.nav-menu.active {
			transform: translateY(0);
			opacity: 1;
			visibility: visible;
		}

		.nav-item {
			width: 100%;
		}

		.nav-link {
			width: 100%;
			justify-content: flex-start;
			padding: 1.2rem 1.5rem;
			font-size: 1.1rem;
			border-radius: 16px;
			background: rgba(255, 255, 255, 0.7);
			border: 1px solid rgba(212, 175, 55, 0.1);
		}

		.nav-text {
			display: block;
		}

		.nav-link:hover {
			transform: translateX(8px);
			background: linear-gradient(135deg, rgba(212, 175, 55, 0.2) 0%, rgba(247, 220, 111, 0.2) 100%);
		}

		.nav-link.active {
			background: linear-gradient(135deg, #D4AF37 0%, #F7DC6F 100%);
			color: #1A365D;
			transform: translateX(4px);
		}
	}

	@media (max-width: 480px) {
		.nav-content {
			padding: 0 1rem;
		}

		.logo {
			padding: 0.4rem 0.8rem;
			gap: 0.8rem;
		}

		.logo-icon {
			font-size: 1.8rem;
		}

		.logo-text {
			font-size: 1.3rem;
		}

		.logo-subtitle {
			font-size: 0.7rem;
		}

		.nav-menu {
			left: 0.5rem;
			right: 0.5rem;
			padding: 1.5rem;
		}

		.nav-link {
			padding: 1rem 1.2rem;
			font-size: 1rem;
		}

		.menu-toggle {
			padding: 0.6rem;
		}

		.hamburger-line {
			width: 20px;
		}
	}

	/* Scroll Effect */
	.navbar.scrolled {
		padding: 0.5rem 0;
		background: rgba(255, 255, 255, 0.98);
		box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
	}

	/* Animation for page load */
	@keyframes slideDown {
		from {
			transform: translateY(-100%);
			opacity: 0;
		}
		to {
			transform: translateY(0);
			opacity: 1;
		}
	}

	.navbar {
		animation: slideDown 0.6s ease-out;
	}

	/* Hover effects for nav items */
	.nav-item:hover .nav-link:not(.active) {
		background: linear-gradient(135deg, rgba(212, 175, 55, 0.1) 0%, rgba(247, 220, 111, 0.1) 100%);
	}

	/* Focus states for accessibility */
	.nav-link:focus {
		outline: 2px solid #D4AF37;
		outline-offset: 2px;
	}

	.menu-toggle:focus {
		outline: 2px solid #D4AF37;
		outline-offset: 2px;
	}
</style>

<script>
	const menuToggle = document.getElementById('menuToggle');
	const navMenu = document.getElementById('navMenu');
	const navbar = document.querySelector('.navbar');

	// Menu toggle functionality
	menuToggle?.addEventListener('click', () => {
		navMenu?.classList.toggle('active');
		menuToggle?.classList.toggle('active');
	});

	// Close menu when clicking on a link
	document.querySelectorAll('.nav-menu a').forEach(link => {
		link.addEventListener('click', () => {
			navMenu?.classList.remove('active');
			menuToggle?.classList.remove('active');
		});
	});

	// Close menu when clicking outside
	document.addEventListener('click', (e) => {
		if (!menuToggle?.contains(e.target) && !navMenu?.contains(e.target)) {
			navMenu?.classList.remove('active');
			menuToggle?.classList.remove('active');
		}
	});

	// Scroll effect
	let lastScrollY = window.scrollY;
	
	window.addEventListener('scroll', () => {
		if (window.scrollY > 50) {
			navbar?.classList.add('scrolled');
		} else {
			navbar?.classList.remove('scrolled');
		}
		lastScrollY = window.scrollY;
	});

	// Smooth scroll for anchor links
	document.querySelectorAll('a[href^="#"]').forEach(anchor => {
		anchor.addEventListener('click', function (e) {
			e.preventDefault();
			const target = document.querySelector(this.getAttribute('href'));
			if (target) {
				target.scrollIntoView({
					behavior: 'smooth',
					block: 'start'
				});
			}
		});
	});
</script>