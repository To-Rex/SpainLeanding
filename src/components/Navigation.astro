	}

	.nav-menu {
		display: flex;
		list-style: none;
		gap: 2rem;
		margin: 0;
		padding: 0;
	}

	.nav-menu a {
		text-decoration: none;
		color: #2C3E50;
		font-weight: 400;
		transition: color 0.3s ease;
		font-size: 0.95rem;
	}

	.nav-menu a:hover {
		color: #D4AF37;
	}

	.menu-toggle {
		display: none;
		flex-direction: column;
		background: none;
		border: none;
		cursor: pointer;
		padding: 0.5rem;
	}

	.menu-toggle span {
		width: 25px;
		height: 3px;
		background: #2C3E50;
		margin: 3px 0;
		transition: 0.3s;
		border-radius: 2px;
	}

	@media (max-width: 768px) {
		.menu-toggle {
			display: flex;
		}

		.nav-menu {
			position: absolute;
			top: 100%;
			left: 0;
			width: 100%;
			flex-direction: column;
			background: rgba(255, 255, 255, 0.98);
			backdrop-filter: blur(15px);
