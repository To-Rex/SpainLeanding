---
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="hero">
	<!-- Image Slider -->
	<div class="hero-slider" id="heroSlider">
		<div class="slide active">
			<img src="https://dynamic-media-cdn.tripadvisor.com/media/photo-o/28/5b/23/f7/caption.jpg?w=1200&h=1200&s=1" alt={t('slider.registan.title')} />
			<div class="slide-info">
				<h3>{t('slider.registan.title')}</h3>
				<p>{t('slider.registan.location')}</p>
			</div>
		</div>
		<div class="slide">
			<img src="https://i.pinimg.com/originals/4d/ed/6f/4ded6fb046f27e10c43b843b66c5dc22.jpg" alt={t('slider.khiva.title')} />
			<div class="slide-info">
				<h3>{t('slider.khiva.title')}</h3>
				<p>{t('slider.khiva.location')}</p>
			</div>
		</div>
		<div class="slide">
			<img src="https://wallpapers.com/images/hd/khiva-textiles-for-sale-gd2sxjotwxypuyyy.jpg" alt={t('slider.crafts.title')} />
			<div class="slide-info">
				<h3>{t('slider.crafts.title')}</h3>
				<p>{t('slider.crafts.location')}</p>
			</div>
		</div>
		<div class="slide">
			<img src="https://media.vand.ru/tourgallery/123127/ib17300449413337.webp" alt={t('slider.bukhara.title')} />
			<div class="slide-info">
				<h3>{t('slider.bukhara.title')}</h3>
				<p>{t('slider.bukhara.location')}</p>
			</div>
		</div>
		<div class="slide">
			<img src="https://i.pinimg.com/736x/c9/76/ae/c976ae20a2064eada0913fbdc0fec064.jpg" alt={t('slider.madrasas.title')} />
			<div class="slide-info">
				<h3>{t('slider.madrasas.title')}</h3>
				<p>{t('slider.madrasas.location')}</p>
			</div>
		</div>
		<div class="slide">
			<img src="https://a.d-cd.net/6f5f8804l8c-1920.jpg" alt={t('slider.evening.title')} />
			<div class="slide-info">
				<h3>{t('slider.evening.title')}</h3>
				<p>{t('slider.evening.location')}</p>
			</div>
		</div>
		
		<!-- Slider overlay -->
		<div class="hero-overlay"></div>
	</div>
	
	<div class="container">
		<div class="hero-content">
			<h1 class="hero-title">
				{t('hero.title')}<br>
				<span class="hero-subtitle">{t('hero.subtitle')}</span>
			</h1>
			
			<p class="hero-description">
				{t('hero.description')}
			</p>
			
			<div class="hero-actions">
				<a href={getLocalizedPath('/itinerarios', lang)} class="btn btn-primary">{t('hero.plan')}</a>
				<a href={getLocalizedPath('/contacto', lang) + '#consultation-form'} class="btn btn-secondary">{t('hero.explore')}</a>
			</div>
		</div>
	</div>
</section>

<style>
	.hero {
		position: relative;
		height: 100vh;
		min-height: 600px;
		display: flex;
		align-items: center;
		overflow: hidden;
	}

	.hero-slider {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -2;
	}

	.slide {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		opacity: 0;
		transition: opacity 2s ease-in-out;
	}

	.slide.active {
		opacity: 1;
	}

	.slide img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center;
	}

	.slide-info {
		position: absolute;
		bottom: 2rem;
		left: 2rem;
		background: rgba(0, 0, 0, 0.7);
		color: white;
		padding: 1rem 1.5rem;
		border-radius: 12px;
		backdrop-filter: blur(10px);
		border: 1px solid rgba(255, 255, 255, 0.1);
	}

	.slide-info h3 {
		color: #F7DC6F;
		margin-bottom: 0.5rem;
		font-size: 1.1rem;
		font-weight: 600;
	}

	.slide-info p {
		color: rgba(255, 255, 255, 0.9);
		margin: 0;
		font-size: 0.85rem;
	}

	.hero-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(
			135deg,
			rgba(26, 54, 93, 0.7) 0%,
			rgba(44, 82, 130, 0.5) 50%,
			rgba(212, 175, 55, 0.2) 100%
		);
		z-index: -1;
	}

	.hero-content {
		text-align: center;
		max-width: 700px;
		margin: 0 auto;
		padding: 2rem;
		color: white;
		z-index: 5;
		position: relative;
	}

	.hero-title {
		font-size: 2.2rem;
		font-weight: 600;
		margin-bottom: 1rem;
		text-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
		line-height: 1.2;
	}

	.hero-subtitle {
		font-size: 1.6rem;
		font-style: italic;
		color: #F7DC6F;
		display: block;
		margin-top: 0.5rem;
		text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
	}

	.hero-description {
		font-size: 1rem;
		margin-bottom: 2rem;
		color: rgba(255, 255, 255, 0.9);
		line-height: 1.6;
		max-width: 500px;
		margin-left: auto;
		margin-right: auto;
		text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
	}

	.hero-actions {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.btn {
		display: inline-block;
		padding: 0.9rem 1.8rem;
		border-radius: 8px;
		font-weight: 500;
		text-decoration: none;
		transition: all 0.3s ease;
		font-size: 0.95rem;
		text-align: center;
		white-space: nowrap;
		min-width: 140px;
	}

	.btn-primary {
		background: linear-gradient(135deg, #D4AF37 0%, #F7DC6F 100%);
		color: #1A365D;
		font-weight: 600;
		box-shadow: 0 4px 15px rgba(212, 175, 55, 0.3);
	}

	.btn-primary:hover {
		transform: translateY(-2px);
		box-shadow: 0 6px 20px rgba(212, 175, 55, 0.4);
	}

	.btn-secondary {
		background: rgba(255, 255, 255, 0.1);
		color: white;
		border: 2px solid rgba(255, 255, 255, 0.3);
		backdrop-filter: blur(10px);
	}

	.btn-secondary:hover {
		background: rgba(255, 255, 255, 0.2);
		border-color: rgba(255, 255, 255, 0.5);
		transform: translateY(-2px);
	}

	/* Tablet styles */
	@media (max-width: 1024px) {
		.hero-title {
			font-size: 2rem;
		}

		.hero-subtitle {
			font-size: 1.4rem;
		}

		.hero-description {
			font-size: 0.95rem;
		}
	}

	/* Mobile styles */
	@media (max-width: 768px) {
		.hero {
			min-height: 500px;
		}

		.slide-info {
			bottom: 1rem;
			left: 1rem;
			right: 1rem;
			padding: 0.8rem 1rem;
		}

		.slide-info h3 {
			font-size: 1rem;
		}

		.slide-info p {
			font-size: 0.8rem;
		}

		.hero-content {
			padding: 1.5rem;
		}

		.hero-title {
			font-size: 1.8rem;
		}

		.hero-subtitle {
			font-size: 1.2rem;
		}

		.hero-description {
			font-size: 0.9rem;
			margin-bottom: 1.5rem;
		}

		.hero-actions {
			flex-direction: column;
			align-items: center;
			gap: 0.8rem;
		}

		.btn {
			width: 100%;
			max-width: 250px;
			padding: 0.8rem 1.5rem;
			font-size: 0.9rem;
		}
	}

	/* Small mobile styles */
	@media (max-width: 480px) {
		.hero {
			min-height: 450px;
		}

		.hero-title {
			font-size: 1.6rem;
		}

		.hero-subtitle {
			font-size: 1.1rem;
		}

		.hero-description {
			font-size: 0.85rem;
		}

		.slide-info {
			padding: 0.6rem 0.8rem;
		}

		.slide-info h3 {
			font-size: 0.9rem;
		}

		.slide-info p {
			font-size: 0.75rem;
		}
	}
</style>

<script>
	// Slider functionality - ONLY AUTO PLAY
	let currentSlide = 0;
	const slides = document.querySelectorAll('.slide');
	const totalSlides = slides.length;
	
	function showSlide(index: number) {
		slides.forEach((slide, i) => {
			slide.classList.toggle('active', i === index);
		});
	}
	
	function nextSlide() {
		currentSlide = (currentSlide + 1) % totalSlides;
		showSlide(currentSlide);
	}
	
	// Auto-play slider - 5 seconds interval
	setInterval(nextSlide, 5000);
</script>