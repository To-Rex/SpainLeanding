<style>
	.highlights {
		background: linear-gradient(135deg, #F8F9FA 0%, #E6F3FF 100%);
		padding: 4rem 0;
	}

	.highlights h2 {
		text-align: center;
		color: #1A365D;
		margin-bottom: 1rem;
		font-size: 2rem;
		font-weight: 600;
	}

	.highlights-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2rem;
		margin: 2rem 0;
	}

	.highlight-card {
		background: white;
		padding: 2rem;
		border-radius: 12px;
		text-align: center;
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
	}

	.highlight-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
	}

	.highlight-icon {
		margin-bottom: 1.5rem;
	}

	.highlight-icon img {
		width: 60px;
		height: 60px;
		border-radius: 50%;
		object-fit: cover;
		border: 3px solid #D4AF37;
	}

	.highlight-card h3 {
		color: #2C5282;
		margin-bottom: 1rem;
		font-size: 1.2rem;
		font-weight: 600;
	}

	.highlight-card p {
		color: #4A5568;
		line-height: 1.6;
		font-size: 0.95rem;
	}

	.cta-section {
		text-align: center;
		margin-top: 3rem;
		padding: 2.5rem;
		background: white;
		border-radius: 16px;
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
	}

	.cta-section h2 {
		color: #1A365D;
		margin-bottom: 1rem;
		font-size: 1.8rem;
		font-weight: 600;
	}

	.cta-section p {
		font-size: 1rem;
		margin-bottom: 2rem;
		color: #4A5568;
		line-height: 1.6;
	}

	.cta-buttons {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.btn {
		display: inline-block;
		padding: 0.9rem 1.8rem;
		border-radius: 8px;
		font-weight: 500;
		text-decoration: none;
		transition: all 0.3s ease;
		font-size: 0.95rem;
		text-align: center;
		min-width: 140px;
	}

	.btn:first-child {
		background: linear-gradient(135deg, #D4AF37 0%, #F7DC6F 100%);
		color: #1A365D;
		box-shadow: 0 4px 15px rgba(212, 175, 55, 0.2);
	}

	.btn-outline {
		background: transparent;
		border: 2px solid #D4AF37;
		color: #D4AF37;
	}

	.btn:hover {
		transform: translateY(-2px);
	}

	.btn-outline:hover {
		background: #D4AF37;
		color: #1A365D;
	}

	.image-slider {
		background: linear-gradient(135deg, #F8F9FA 0%, #E6F3FF 100%);
		padding: 4rem 0;
	}

	.image-slider h2 {
		text-align: center;
		color: #1A365D;
		margin-bottom: 1rem;
		font-size: 2rem;
		font-weight: 600;
	}

	.slider-description {
		text-align: center;
		color: #4A5568;
		font-size: 1rem;
		margin-bottom: 2.5rem;
		line-height: 1.6;
	}

	.main-slider {
		position: relative;
		max-width: 900px;
		margin: 0 auto;
		border-radius: 20px;
		overflow: hidden;
		box-shadow: 0 15px 50px rgba(0, 0, 0, 0.15);
	}

	.slider-container {
		position: relative;
		height: 450px;
	}

	.slider-slide {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		opacity: 0;
		transition: opacity 1.5s ease-in-out;
	}

	.slider-slide.active {
		opacity: 1;
	}

	.slider-slide img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center;
	}

	.slide-content {
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
		color: white;
		padding: 2.5rem 2rem 2rem;
	}

	.slide-content h3 {
		color: #F7DC6F;
		font-size: 1.8rem;
		margin-bottom: 0.5rem;
		text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
		font-weight: 600;
	}

	.slide-content p {
		color: rgba(255, 255, 255, 0.9);
		font-size: 1rem;
		margin-bottom: 1rem;
		text-shadow: 0 1px 5px rgba(0, 0, 0, 0.5);
		line-height: 1.5;
	}

	.slide-location {
		display: inline-block;
		background: rgba(212, 175, 55, 0.9);
		color: #1A365D;
		padding: 0.4rem 1rem;
		border-radius: 20px;
		font-size: 0.85rem;
		font-weight: 500;
	}

	.slider-nav {
		position: absolute;
		top: 50%;
		transform: translateY(-50%);
		background: rgba(255, 255, 255, 0.2);
		border: none;
		color: white;
		font-size: 2rem;
		padding: 1rem 1.2rem;
		cursor: pointer;
		border-radius: 50%;
		transition: all 0.3s ease;
		backdrop-filter: blur(10px);
		z-index: 10;
	}

	.slider-nav:hover {
		background: rgba(255, 255, 255, 0.3);
		transform: translateY(-50%) scale(1.1);
	}

	.slider-nav.prev {
		left: 1.5rem;
	}

	.slider-nav.next {
		right: 1.5rem;
	}

	.slider-dots {
		position: absolute;
		bottom: 1.5rem;
		left: 50%;
		transform: translateX(-50%);
		display: flex;
		gap: 0.6rem;
		z-index: 10;
	}

	.slider-dot {
		width: 12px;
		height: 12px;
		border-radius: 50%;
		background: rgba(255, 255, 255, 0.5);
		cursor: pointer;
		transition: all 0.3s ease;
	}

	.slider-dot.active {
		background: #F7DC6F;
		transform: scale(1.2);
		box-shadow: 0 0 10px rgba(247, 220, 111, 0.5);
	}

	/* Tablet styles */
	@media (max-width: 1024px) {
		.highlights h2,
		.image-slider h2 {
			font-size: 1.8rem;
		}

		.slider-container {
			height: 400px;
		}

		.slide-content h3 {
			font-size: 1.6rem;
		}
	}

	/* Mobile styles */
	@media (max-width: 768px) {
		.highlights {
			padding: 3rem 0;
		}

		.highlights-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.highlight-card {
			padding: 1.5rem;
		}

		.cta-section {
			padding: 2rem;
		}

		.cta-buttons {
			flex-direction: column;
			align-items: center;
		}

		.btn {
			width: 100%;
			max-width: 250px;
		}

		.image-slider {
			padding: 3rem 0;
		}

		.slider-container {
			height: 350px;
		}

		.slider-nav {
			font-size: 1.5rem;
			padding: 0.8rem 1rem;
		}

		.slider-nav.prev {
			left: 1rem;
		}

		.slider-nav.next {
			right: 1rem;
		}

		.slide-content {
			padding: 2rem 1.5rem 1.5rem;
		}

		.slide-content h3 {
			font-size: 1.4rem;
		}

		.slide-content p {
			font-size: 0.9rem;
		}

		.highlights h2,
		.image-slider h2 {
			font-size: 1.6rem;
		}

		.cta-section h2 {
			font-size: 1.6rem;
		}
	}

	/* Small mobile styles */
	@media (max-width: 480px) {
		.slider-container {
			height: 300px;
		}

		.slide-content h3 {
			font-size: 1.2rem;
		}

		.slide-content p {
			font-size: 0.85rem;
		}

		.highlights h2,
		.image-slider h2 {
			font-size: 1.4rem;
		}

		.cta-section h2 {
			font-size: 1.4rem;
		}
	}
</style>

<script>
	// Main page slider functionality
	let currentMainSlide = 0;
	const mainSlides = document.querySelectorAll('.slider-slide');
	const totalMainSlides = mainSlides.length;
	
	// Create dots for main slider
	const mainDotsContainer = document.getElementById('sliderDots');
	for (let i = 0; i < totalMainSlides; i++) {
		const dot = document.createElement('div');
		dot.classList.add('slider-dot');
		if (i === 0) dot.classList.add('active');
		dot.addEventListener('click', () => goToMainSlide(i));
		mainDotsContainer?.appendChild(dot);
	}
	
	const mainDots = document.querySelectorAll('.slider-dot');
	
	function showMainSlide(index: number) {
		mainSlides.forEach((slide, i) => {
			slide.classList.toggle('active', i === index);
		});
		mainDots.forEach((dot, i) => {
			dot.classList.toggle('active', i === index);
		});
	}
	
	function nextMainSlide() {
		currentMainSlide = (currentMainSlide + 1) % totalMainSlides;
		showMainSlide(currentMainSlide);
	}
	
	function prevMainSlide() {
		currentMainSlide = (currentMainSlide - 1 + totalMainSlides) % totalMainSlides;
		showMainSlide(currentMainSlide);
	}
	
	function goToMainSlide(index: number) {
		currentMainSlide = index;
		showMainSlide(currentMainSlide);
	}
	
	// Event listeners for main slider
	document.getElementById('nextSlide')?.addEventListener('click', nextMainSlide);
	document.getElementById('prevSlide')?.addEventListener('click', prevMainSlide);
	
	// Auto-play main slider
	let mainAutoPlay = setInterval(nextMainSlide, 4000);
	
	// Pause on hover for main slider
	const mainSlider = document.getElementById('mainSlider');
	mainSlider?.addEventListener('mouseenter', () => {
		clearInterval(mainAutoPlay);
	});
	
	mainSlider?.addEventListener('mouseleave', () => {
		mainAutoPlay = setInterval(nextMainSlide, 4000);
	});
</script>