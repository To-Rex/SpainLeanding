---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../../i18n/utils';

export function getStaticPaths() {
  return [
    {params: {lang: 'uz'}},
    {params: {lang: 'en'}},
    {params: {lang: 'ru'}}
  ];
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t('destinations.title')} description={t('destinations.subtitle')}>
	<Navigation />
	
	<section class="section hero-destinations">
		<div class="container">
			<div class="section-content">
				<h1>{t('destinations.title')}</h1>
				<p class="lead">{t('destinations.subtitle')}</p>
			</div>
		</div>
	</section>

	<section class="section destinations">
		<div class="container">
			<div class="section-content">
				<div class="destination-card featured">
					<div class="destination-image">
						<img src="https://images.unsplash.com/photo-1590736969955-71cc94901144?auto=format&fit=crop&w=800&h=500&q=80" alt="Registan Square at golden hour, Samarkand" />
					</div>
					<div class="destination-content">
						<h2>{t('destinations.samarkand.title')}</h2>
						<p class="destination-description">{t('destinations.samarkand.desc')}</p>
						
						<div class="highlights">
							<h3>{t('destinations.samarkand.places')}</h3>
							<ul>
								<li>{t('destinations.samarkand.registan')}</li>
								<li>{t('destinations.samarkand.gur')}</li>
								<li>{t('destinations.samarkand.observatory')}</li>
								<li>{t('destinations.samarkand.bibi')}</li>
							</ul>
						</div>
						
						<div class="local-tips">
							<h3>{t('destinations.samarkand.tips')}</h3>
							<p>{t('destinations.samarkand.advice')}</p>
						</div>
					</div>
				</div>

				<div class="destination-card">
					<div class="destination-image">
						<img src="https://images.unsplash.com/photo-1590736969955-71cc94901144?auto=format&fit=crop&w=800&h=500&q=80" alt="Historic Bukhara old city with minarets" />
					</div>
					<div class="destination-content">
						<h2>{t('destinations.bukhara.title')}</h2>
						<p class="destination-description">{t('destinations.bukhara.desc')}</p>
						
						<div class="highlights">
							<h3>{t('destinations.bukhara.places')}</h3>
							<ul>
								<li>{t('destinations.bukhara.poi')}</li>
								<li>{t('destinations.bukhara.ark')}</li>
								<li>{t('destinations.bukhara.samanid')}</li>
								<li>{t('destinations.bukhara.domes')}</li>
							</ul>
						</div>
						
						<div class="local-tips">
							<h3>{t('destinations.bukhara.tips')}</h3>
							<p>{t('destinations.bukhara.advice')}</p>
						</div>
					</div>
				</div>

				<div class="destination-card">
					<div class="destination-image">
						<img src="https://images.unsplash.com/photo-1590736969955-71cc94901144?auto=format&fit=crop&w=800&h=500&q=80" alt="Ichan-Kala fortress walls, Khiva" />
					</div>
					<div class="destination-content">
						<h2>{t('destinations.khiva.title')}</h2>
						<p class="destination-description">{t('destinations.khiva.desc')}</p>
						
						<div class="highlights">
							<h3>{t('destinations.khiva.places')}</h3>
							<ul>
								<li>{t('destinations.khiva.ichan')}</li>
								<li>{t('destinations.khiva.kalta')}</li>
								<li>{t('destinations.khiva.tash')}</li>
								<li>{t('destinations.khiva.islam')}</li>
							</ul>
						</div>
						
						<div class="local-tips">
							<h3>{t('destinations.khiva.tips')}</h3>
							<p>{t('destinations.khiva.advice')}</p>
						</div>
					</div>
				</div>

				<div class="destination-card">
					<div class="destination-image">
						<img src="https://images.unsplash.com/photo-1590736969955-71cc94901144?auto=format&fit=crop&w=800&h=500&q=80" alt="Tashkent city with traditional and modern architecture" />
					</div>
					<div class="destination-content">
						<h2>{t('destinations.tashkent.title')}</h2>
						<p class="destination-description">{t('destinations.tashkent.desc')}</p>
						
						<div class="highlights">
							<h3>{t('destinations.tashkent.places')}</h3>
							<ul>
								<li>{t('destinations.tashkent.old')}</li>
								<li>{t('destinations.tashkent.chorsu')}</li>
								<li>{t('destinations.tashkent.metro')}</li>
								<li>{t('destinations.tashkent.museum')}</li>
							</ul>
						</div>
						
						<div class="local-tips">
							<h3>{t('destinations.tashkent.tips')}</h3>
							<p>{t('destinations.tashkent.advice')}</p>
						</div>
					</div>
				</div>

				<div class="destination-card">
					<div class="destination-image">
						<img src="https://images.unsplash.com/photo-1590736969955-71cc94901144?auto=format&fit=crop&w=800&h=500&q=80" alt="Ferghana Valley with mountains and silk workshops" />
					</div>
					<div class="destination-content">
						<h2>{t('destinations.ferghana.title')}</h2>
						<p class="destination-description">{t('destinations.ferghana.desc')}</p>
						
						<div class="highlights">
							<h3>{t('destinations.ferghana.places')}</h3>
							<ul>
								<li>{t('destinations.ferghana.margilan')}</li>
								<li>{t('destinations.ferghana.rishtan')}</li>
								<li>{t('destinations.ferghana.kokand')}</li>
								<li>{t('destinations.ferghana.kuva')}</li>
							</ul>
						</div>
						
						<div class="local-tips">
							<h3>{t('destinations.ferghana.tips')}</h3>
							<p>{t('destinations.ferghana.advice')}</p>
						</div>
					</div>
				</div>
				
				<a href={getLocalizedPath('/', lang)} class="back-to-top">{t('back.home')}</a>
			</div>
		</div>
	</section>
</Layout>

<style>
	.hero-destinations {
		background: linear-gradient(135deg, #2C5282 0%, #3182CE 100%);
		color: white;
		text-align: center;
		padding: 8rem 0 5rem;
	}

	.hero-destinations h1 {
		font-size: 3rem;
		margin-bottom: 1rem;
		color: white;
	}

	.lead {
		font-size: 1.3rem;
		color: rgba(255, 255, 255, 0.9);
		max-width: 600px;
		margin: 0 auto;
	}

	.destinations {
		padding: 6rem 0;
	}

	.destination-card {
		background: white;
		border-radius: 16px;
		overflow: hidden;
		box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
		margin-bottom: 4rem;
		transition: transform 0.3s ease;
	}

	.destination-card:hover {
		transform: translateY(-5px);
	}

	.destination-card.featured {
		border: 3px solid #D4AF37;
	}

	.destination-image {
		height: 300px;
		overflow: hidden;
	}

	.destination-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.3s ease;
	}

	.destination-card:hover .destination-image img {
		transform: scale(1.05);
	}

	.destination-content {
		padding: 2.5rem;
	}

	.destination-content h2 {
		color: #1A365D;
		margin-bottom: 1.5rem;
		font-size: 1.8rem;
	}

	.destination-description {
		font-size: 1.1rem;
		color: #4A5568;
		line-height: 1.7;
		margin-bottom: 2rem;
	}

	.highlights, .local-tips {
		margin-top: 2rem;
		padding: 1.5rem;
		background: #F8F9FA;
		border-radius: 8px;
	}

	.highlights h3, .local-tips h3 {
		color: #2C5282;
		margin-bottom: 1rem;
		font-size: 1.2rem;
	}

	.highlights ul {
		list-style: none;
		padding: 0;
	}

	.highlights li {
		padding: 0.5rem 0;
		color: #4A5568;
		border-bottom: 1px solid #E2E8F0;
	}

	.highlights li:last-child {
		border-bottom: none;
	}

	.highlights li:before {
		content: "üìç";
		margin-right: 0.5rem;
	}

	.local-tips {
		background: #E6F3FF;
		border-left: 4px solid #3182CE;
	}

	.local-tips p {
		color: #2C5282;
		font-style: italic;
		margin: 0;
	}

	@media (max-width: 768px) {
		.destination-image {
			height: 200px;
		}

		.destination-content {
			padding: 1.5rem;
		}

		.destination-content h2 {
			font-size: 1.5rem;
		}

		.hero-destinations h1 {
			font-size: 2.5rem;
		}
	}
</style>