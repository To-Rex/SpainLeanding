---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../../i18n/utils';

export function getStaticPaths() {
  return [
    {params: {lang: 'uz'}},
    {params: {lang: 'en'}},
    {params: {lang: 'ru'}}
  ];
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t('culture.title')} description={t('culture.subtitle')}>
	<Navigation />
	
	<section class="section hero-culture">
		<div class="container">
			<div class="section-content">
				<h1>{t('culture.title')}</h1>
				<p class="lead">{t('culture.subtitle')}</p>
			</div>
		</div>
	</section>

	<section class="section gastronomy">
		<div class="container">
			<div class="section-content">
				<h2>{t('culture.gastronomy.title')}</h2>
				<div class="culture-grid">
					<div class="culture-card">
						<img src="https://images.unsplash.com/photo-1574484284002-952d92456975?auto=format&fit=crop&w=600&h=400&q=80" alt="Traditional Uzbek plov cooking in large kazan" />
						<div class="culture-content">
							<h3>{t('culture.plov.title')}</h3>
							<p>{t('culture.plov.desc')}</p>
						</div>
					</div>
					
					<div class="culture-card">
						<img src="https://images.unsplash.com/photo-1590736969955-71cc94901144?auto=format&fit=crop&w=600&h=400&q=80" alt="Traditional Uzbek crafts and ceramics" />
						<div class="culture-content">
							<h3>{t('culture.somsa.title')}</h3>
							<p>{t('culture.somsa.desc')}</p>
						</div>
					</div>
					
					<div class="culture-card">
						<img src="https://images.unsplash.com/photo-1571019613454-1cb2f99b2d8b?auto=format&fit=crop&w=600&h=400&q=80" alt="Traditional Uzbek tea ceremony with piala cups" />
						<div class="culture-content">
							<h3>{t('culture.tea.title')}</h3>
							<p>{t('culture.tea.desc')}</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section class="section traditions">
		<div class="container">
			<div class="section-content">
				<h2>{t('culture.traditions.title')}</h2>
				<div class="traditions-grid">
					<div class="tradition-item">
						<div class="tradition-icon">üíÉ</div>
						<h3>{t('culture.dance.title')}</h3>
						<p>{t('culture.dance.desc')}</p>
					</div>
					
					<div class="tradition-item">
						<div class="tradition-icon">üëò</div>
						<h3>{t('culture.clothing.title')}</h3>
						<p>{t('culture.clothing.desc')}</p>
					</div>
					
					<div class="tradition-item">
						<div class="tradition-icon">üèõÔ∏è</div>
						<h3>{t('culture.architecture.title')}</h3>
						<p>{t('culture.architecture.desc')}</p>
					</div>
					
					<div class="tradition-item">
						<div class="tradition-icon">üé®</div>
						<h3>{t('culture.crafts.title')}</h3>
						<p>{t('culture.crafts.desc')}</p>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section class="section cultural-tips">
		<div class="container">
			<div class="section-content">
				<h2>{t('culture.etiquette.title')}</h2>
				<div class="tips-container">
					<div class="tip-card">
						<h3>{t('culture.home.title')}</h3>
						<ul>
							<li>{t('culture.home.tip1')}</li>
							<li>{t('culture.home.tip2')}</li>
							<li>{t('culture.home.tip3')}</li>
							<li>{t('culture.home.tip4')}</li>
						</ul>
					</div>
					
					<div class="tip-card">
						<h3>{t('culture.mosque.title')}</h3>
						<ul>
							<li>{t('culture.mosque.tip1')}</li>
							<li>{t('culture.mosque.tip2')}</li>
							<li>{t('culture.mosque.tip3')}</li>
							<li>{t('culture.mosque.tip4')}</li>
						</ul>
					</div>
					
					<div class="tip-card">
						<h3>{t('culture.bazaar.title')}</h3>
						<ul>
							<li>{t('culture.bazaar.tip1')}</li>
							<li>{t('culture.bazaar.tip2')}</li>
							<li>{t('culture.bazaar.tip3')}</li>
							<li>{t('culture.bazaar.tip4')}</li>
						</ul>
					</div>
				</div>
				
				<a href={getLocalizedPath('/', lang)} class="back-to-top">{t('back.home')}</a>
			</div>
		</div>
	</section>
</Layout>

<style>
	.hero-culture {
		background: linear-gradient(135deg, #1A365D 0%, #2C5282 100%);
		color: white;
		text-align: center;
		padding: 8rem 0 5rem;
	}

	.hero-culture h1 {
		font-size: 3rem;
		margin-bottom: 1rem;
		color: white;
	}

	.lead {
		font-size: 1.3rem;
		color: rgba(255, 255, 255, 0.9);
		max-width: 600px;
		margin: 0 auto;
	}

	.culture-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 3rem;
		margin-top: 3rem;
	}

	.culture-card {
		background: white;
		border-radius: 16px;
		overflow: hidden;
		box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
		transition: transform 0.3s ease;
	}

	.culture-card:hover {
		transform: translateY(-5px);
	}

	.culture-card img {
		width: 100%;
		height: 200px;
		object-fit: cover;
	}

	.culture-content {
		padding: 2rem;
	}

	.culture-content h3 {
		color: #2C5282;
		margin-bottom: 1rem;
		font-size: 1.3rem;
	}

	.traditions-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
		margin-top: 3rem;
	}

	.tradition-item {
		background: white;
		padding: 2rem;
		border-radius: 12px;
		text-align: center;
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.05);
		transition: transform 0.3s ease;
	}

	.tradition-item:hover {
		transform: translateY(-3px);
	}

	.tradition-icon {
		font-size: 2.5rem;
		margin-bottom: 1rem;
	}

	.tradition-item h3 {
		color: #2C5282;
		margin-bottom: 1rem;
	}

	.cultural-tips {
		background: #F8F9FA;
	}

	.tips-container {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
		margin-top: 3rem;
	}

	.tip-card {
		background: white;
		padding: 2rem;
		border-radius: 12px;
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.05);
	}

	.tip-card h3 {
		color: #2C5282;
		margin-bottom: 1.5rem;
		font-size: 1.2rem;
	}

	.tip-card ul {
		list-style: none;
		padding: 0;
	}

	.tip-card li {
		padding: 0.5rem 0;
		color: #4A5568;
		border-bottom: 1px solid #E2E8F0;
	}

	.tip-card li:last-child {
		border-bottom: none;
	}

	.tip-card li:before {
		content: "‚úì";
		color: #D4AF37;
		font-weight: bold;
		margin-right: 0.5rem;
	}

	@media (max-width: 768px) {
		.culture-grid {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.traditions-grid {
			grid-template-columns: 1fr;
		}

		.tips-container {
			grid-template-columns: 1fr;
		}

		.hero-culture h1 {
			font-size: 2.5rem;
		}
	}
</style>